<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
     backupStaticAttributes="false"
     colors="true"
     convertErrorsToExceptions="true"
     convertNoticesToExceptions="true"
     convertWarningsToExceptions="true"
     processIsolation="false"
     stopOnFailure="false"
     syntaxCheck="false"
     bootstrap="test/bootstrap.php"
>
  <testsuites>
    <testsuite name="Cradle System Test">
      <file>test/Fieldset.php</file>
      <file>test/Schema.php</file>
      <file>test/Schema/Validator.php</file>
      <file>test/Fieldset/Validator.php</file>
      <file>test/Fieldset/Field/AbstractField.php</file>
      <file>test/Fieldset/Field/FieldHandler.php</file>
      <file>test/Fieldset/Format/AbstractFormatter.php</file>
      <file>test/Fieldset/Format/FormatHandler.php</file>
      <file>test/Fieldset/Validation/AbstractValidator.php</file>
      <file>test/Fieldset/Validation/ValidationHandler.php</file>
      <file>test/events/fieldset.php</file>
      <file>test/events/schema.php</file>
      <file>test/events/collection.php</file>
      <file>test/events/model.php</file>
    </testsuite>
  </testsuites>
  <filter>
  <whitelist>
    <directory suffix=".php">./src</directory>
    <exclude>
      <directory>./vendor</directory>
      <directory>./test</directory>
      <file>./src/Schema/SchemaTypes.php</file>
      <file>./src/Fieldset/FieldsetTypes.php</file>
      <file>./src/Fieldset/Field/FieldInterface.php</file>
      <file>./src/Fieldset/Field/FieldTypes.php</file>
      <file>./src/Fieldset/Format/FormatterInterface.php</file>
      <file>./src/Fieldset/Format/FormatTypes.php</file>
      <file>./src/Fieldset/Validation/ValidatorInterface.php</file>
      <file>./src/Fieldset/Validation/ValidationTypes.php</file>
    </exclude>
  </whitelist>
  </filter>
</phpunit>
